<form method="GET" action="/subscribers">
    <input type="text" name="name" placeholder="Nom">
    <input type="text" name="zipCode" placeholder="Code postal">
    <button type="submit">Rechercher</button>
  </form>
  
<h2>Liste des abonnés</h2>
<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th>Code Postal</th>
      <th>Actions</th> <!-- Ajout d'une colonne pour les actions -->
    </tr>
  </thead>
  <tbody>
    <% subscribers.forEach(subscriber => { %>
    <tr>
      <td><a href="/subscribers/<%= subscriber._id %>"><%= subscriber.name %></a></td>
      <td><%= subscriber.email %></td>
      <td><%= subscriber.zipCode %></td>
      <td>
        <form action="/subscribers/<%= subscriber._id %>/delete" method="POST" onsubmit="return confirm('Supprimer cet abonné ?');" style="display:inline;">
          <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
        </form>
        <a href="/subscribers/<%= subscriber._id %>/edit" class="btn btn-secondary btn-sm">Modifier</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>

<a href="/subscribers/new" class="btn btn-primary">Créer un nouvel abonné</a>
